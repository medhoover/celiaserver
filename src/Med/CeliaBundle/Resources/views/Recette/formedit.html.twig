                {{ form_widget(form.categorie, {'attr': {'class': 'col-md-4 chzn-select chzn-done form-controle left'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" >Image </label>
            <div class="col-md-9">
            {{ form_widget(form.image, {'attr': {'class': ''}}) }}     
