            <div class="col-md-9">
              {{ form_widget(form.nom, {'attr': {'class': 'col-md-6 form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
        {{ form_label(form.ingredients, "Ingredients", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
