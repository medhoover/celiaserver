<div class="col-lg-12">
    <div class="panel panel-default bootstrap-admin-no-table-panel">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title">Nouvelle Recette</div>
        </div>
        <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <fieldset>

                    {{ form_errors(form) }}

                    <div class="form-group">
                    {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                    {{ form_errors(form.nom) }}
                        <div class="col-lg-10">
                          {{ form_widget(form.nom, {'attr': {'class': 'col-md-6 form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                    {{ form_label(form.ingredients, "Ingredients", {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                    <div class="col-lg-10">
                    {{ form_widget(form.ingredients, {'attr': {'class': ' form-control textarea '}}) }}    
                    {{ form_errors(form.ingredients) }}
                    </div>
                    </div>
                    <div class="form-group">
                    {{ form_label(form.direction, "Directions", {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                    <div class="col-lg-10">
                    {{ form_widget(form.direction, {'attr': {'class': ' form-control textarea '}}) }}    
                    {{ form_errors(form.direction) }}
                    </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.temp, "Temp", {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                        <div class="col-lg-10">

                        {{ form_widget(form.temp, {'attr': {'class': 'control-label'}}) }}
                        </div>
                    </div>
                    <div class="form-group">

                        {{ form_label(form.categorie, "Marque", {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                        <div class="col-lg-10">

                        {{ form_widget(form.categorie, {'attr': {'class': ' chzn-select chzn-done left'}}) }}
                        </div>
                    </div>

                    <div class="form-group">

                        <label class="col-lg-2 control-label">Image</label>
                        {{ form_widget(form.image, {'attr': {'class': 'col-lg-7'}}) }}

                    </div>

                    <div class="form-group">

                        {{ form_errors(form.image) }}
                        {{ form_errors(form.categorie) }}
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>


                    {{ form_rest(form) }}    
                </fieldset>
                {{form_end(form)}}
        </div>
    </div>


</div>